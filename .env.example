# === Core ===
SQLITE_PATH=./ari.db                      # SQLite DB file
SCHEDULE_TICKERS=TCS,TATAMOTORS,HEROMOTOCO

# === OpenAI ===
OPENAI_API_KEY=sk-xxxx                    # Required for summarization

# === News providers (enable any you have keys for) ===
NEWS_PROVIDER_ORDER=newscatcher,bing,newsapi  # Comma order; code tries in sequence

# Newscatcher (recommended for finance + filters)
NEWSCATCHER_API_KEY=nc_xxxx               # Optional; leave blank to skip

# Bing News Search (good precision top-up)
BING_NEWS_KEY=xxxxxxxxxxxxxxxxxxxxxxxx    # Optional; leave blank to skip
BING_NEWS_ENDPOINT=https://api.bing.microsoft.com/v7.0/news/search

# NewsAPI (baseline; you already use)
NEWS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx     # Optional; leave blank to skip

# === Scheduler (IST) ===
CRON_PREFETCH=0 6 * * *                   # 06:00 IST fetch/cache
CRON_SUMMARIZE=30 6 * * *                 # 06:30 IST summarize
CRON_PURGE=0 3 * * *                      # 03:00 IST TTL purge
SUMMARY_DRY_RUN=true                      # true = don't hit OpenAI on schedules

# === Email (SendGrid) ===
EMAIL_PROVIDER=sendgrid                   # sendgrid|smtp
SENDGRID_API_KEY=SG.xxxxx                 # Required if provider=sendgrid
EMAIL_FROM=ari@example.com
EMAIL_TO=you@example.com